{
  "manifest_version": 3,
  "name": "Allowed Nicknames Filter",
  "version": "1.0",
  "description": "페이지에서 허용된 닉네임을 기준으로 요소를 필터링합니다.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "닉네임 설정"
  }
}
